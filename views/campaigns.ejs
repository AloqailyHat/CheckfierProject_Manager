        <div class="main-title">
            <p class="font-weight-bold"><%= __("sideCamp")%></p>
          </div>
          <div class="add-camp" onclick="show_hide()">
            <p> <a href="#" class="addcam"> <%= __("addCamp")%> </a> </p>
          </div>
         
           
          </div>  
        </div>
        
         <!-- Form -->
        <!-- Form -->
        <form class="form-popup" id="table-form" action="/newCamp" method="POST" enctype="multipart/form-data">
          <label for="image1"><%= __("campimg")%> </label><br>
          <input type="file" id="image1" name="image" accept="image/png, image/jpg"><br>
          <label for="type"><%= __("campType")%>:</label><br>
          <input type="text" name="type" id="type"><br>
          <label for="name"><%= __("campName")%>:</label><br>
          <input id="name1" type="text" name="name"><br>
          <label for="date"><%= __("campDate")%>:</label><br>
          <input id="name1" type="date" name="date"><br>
          <button id="submit"><%= __("save")%></button>
        </form>

            
      <div class="tbl row">
      <table class="table table-striped mt-5 ">
        <table>
          <thead>
            <tr>
              <th><%= __("campType")%></th>
              <th><%= __("campName")%></th>
              <th><%= __("campDate")%></th>
            </tr>
          </thead>
          <tbody>
            <% campaigns.forEach(function(campaign) { %>
              <tr>
                <td><%= campaign.type %></td>
                <td><%= campaign.name %></td>
                <td><%= campaign.date.toDateString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        
      </div>
      <!-- End Main -->
    </div>


    <!-- Custom JS -->
   
