<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Loyality page</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <!-- Custom CSS -->
    <style>


      * {
        font-family:"Montstreet" "sans-serif" ;
      }

     body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #FFFFFF;
    color: #666666;
    font-family: "Montstreet" sans-serif;
  }

  .material-icons-outlined {
    vertical-align: middle;
    line-height: 1px;
  }

  .text-primery {
    color: #666666;
  }
  .text-blue{
    color:#dfc7e0;
  }
  .text-red{
    color: #a68d9f;
  }
  .text-green{
    color: #9da090;
  }
  .text-orange{
    color: #f5b74f;
  }
  .font-weight-bold{
    font-weight: 600;
  }
  
  
  .grid-container {
    display: grid;
    grid-template-columns: 260px 1fr 1fr 1fr;
    grid-template-rows: 0.2fr 3fr;
    grid-template-areas:
      "sidebar header header header"
      "sidebar main main main";
    height: 100vh;
  }
  
  
  /* ---------- HEADER ---------- */
  
  .header {
    grid-area: header;
    height: 70px;
    background-color: #ebebeb;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30px 0 30px;
    box-shadow: 0 6px 7px -4px rgba(172, 157, 169, 0.5);
  }

  .menu-icon {
  display: none;
}

.h_line{
  border-bottom: 0.2px ridge #ffff;
  width: 300px;
  margin: 30px 0px 5px -20px;
 }
  
  
  /* ---------- SIDEBAR ---------- */
  
  #sidebar {
    grid-area: sidebar;
    height: 100%;
    background-color: <%= store.color %>;
    color: #E9E5EE;
    overflow-y: auto;
    -webkit-transition: all 0.5;
    transition: all 0.5;
  }

  .sidebar-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 20px 20px 20px;
  margin-bottom: 30px;
}

.sidebar-title > span {
  display: none;
}

.sidebar-brand {
  margin-top: 15px;
  font-size: 20px;
  font-weight: 700;
}

.sidebar-list {
  padding: 0;
  margin-top: 15px;
  list-style-type: none;
}

.sidebar-list-item {
  padding: 20px 20px 20px 20px;
}

.sidebar-list-item:hover {
  background-color: rgba(255, 255, 255, 0.2);
  cursor: pointer;
}

.sidebar-list-item > a {
  text-decoration: none;
  color: #FFFFFF;
}

.sidebar-responsive {
  display: inline !important;
  position: absolute;
  z-index: 12 !important;
}

.main-title {
  display: flex;
  justify-content: space-between;
}

.main-title > p {
  font-size: 20px;
}

.main-cards {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 20px;
  margin: 20px 0;
}


.rewards-card{
  background-color: rgb(212, 197, 231,33%);
  width: 45vh;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: "Montstreet" sans-serif;
  color: <%= store.color %>;
  height: 25%;
  
}
.all-users{
  background-color: rgb(212, 197, 231,33%);
  /* Rectangle 31 */
  display: flex;
  box-sizing: border-box;
  left: 21%;
  top: 42%;
  position: absolute;
  width: 75%;
  height: 10vh;
  border: 1px solid #E1DDDD;
  border-radius: 30px;
  align-items: center;
}
.dropdown{
  float: right;
 
}
.users-card{
  background-color: rgb(212, 197, 231,33%);
  width: 45vh;
  display: flex;
  align-items: center;
  font-family: "Montstreet" sans-serif;
  color: <%= store.color %>;
  height: 25%;
  margin-top: 5%;
}

.main-container {
    grid-area: main;
    overflow-y: auto;
    padding: 20px 20px;
    margin-left: 3%;
  }
  .add-btn {
    /* Rectangle 45 */
    padding: 1vh;
    text-align: center;
    position: absolute;
    width: 22vh;
    height: 6vh;
    left: 85%;
    top: 15%;
    background: <%= store.color %>;
    border-radius: 10px;
  }
  .add-btn button{
    background-color: rgb(0, 0, 0,0.0);
    color: #fbf5f5;
    border: none;
    font-size: 110%;
  }
  .create-date {
    /* Rectangle 46 */
    position: absolute;
    color: #fbf5f5;
    font-size: 95%;
    width: 23vh;
    height: 5vh;
    top: 23%;
    padding: 1vh;
    background: <%= store.color %>;
    border-radius: 50px;
    
  }
  .status {
    /* Rectangle 47 */
    position: absolute;
    color: #fbf5f5;
    font-size: 95%;
    width: 23vh;
    height: 5vh;
    left: 41%;
    top: 23%;
    padding: 1vh;
    background: <%= store.color %>;
    border-radius: 50px;
  }

  .tbl {
    position: absolute;
    width: 70%;
    top: 23%;
    margin-left: 23%;

}

.container{
  border-radius: 5px;
  background-color: #FFFFFF;
  opacity: 1;
  margin-left: auto;
  margin-right: auto;
  position: absolute;
  top: 60vh; 
  left: 55vh;
  width: 60%;
  
}
input {
  width: 100%;
  padding: 12px;
  border: 1px solid rgb(100, 98, 98);
  border-radius: 10px;
  box-sizing: border-box;
  margin-top: 6px;
  margin-bottom: 16px;
  resize: vertical;
}
#btn{
    cursor: pointer;
    background-color:<%= store.color %>;
    color: #ffffff;
}
table, td, th {
  border: 0.2px solid rgb(215, 214, 214);
}

#userTable th {
text-align: center;
background-color: #efefef;
}

table {
  border-collapse: collapse;
  width: 70%;
  left: 40vh;
  position: absolute;
  top: 35vh; 
}
#table-form {
  display: none;
}
th {
  height: 50px;
}
.form-popup {
  display: none;
  position: fixed;
  width: 420px;
  bottom: 25%;
  right: 10%;
  border: 3px solid #f1f1f1;
  z-index: 9;
  background-color: #FFFFFF;
  border-radius: 8%;
  border-color: #eae7e7;
}

#name {
    margin-top: -35px;
    margin-left: 60px;
    font-size: 20px;
    font-weight: 700;
  }
  .container input{
    width: 410px;
    height: 50px;
  }
  .container label {
    margin-left: 1%;
  }



  
    </style>
     <body>
      <div class="grid-container">

        <!-- Header -->
        <header class="header">
          <div class="menu-icon" onclick="openSidebar()">
              <span class="material-icons-outlined">menu</span>
            </div>
            <div class="header-left">
              <span class="material-icons-outlined">search</span>
            </div>
            <div class="header-right">
              <span class="material-icons-outlined">notifications</span>
              <span class="material-icons-outlined">account_circle</span>
            </div>
        </header>
          <!-- End Header -->
    
          <!-- Sidebar -->
          <aside id="sidebar">
            <!-- End Sidebar -->
            <div class="sidebar-title">
            <div class="sidebar-brand">
              <img src="<%= store.logo %>" id="_logo" height="55" width="55">
              <h2 id="name"><%= store.name %></h2>
              </span>
              <div class="h_line"></div>
      
                </div>
                <span class="material-icons-outlined" onclick="closeSidebar()">close</span>
              </div>
              <ul class="sidebar-list">
                  <li class="sidebar-list-item">
                      <a href="/dashboard" target="_self">
                          <span class="material-icons-outlined">dashboard</span> <%= __("sideDash")%>
                      </a>
                  </li>
                  <li class="sidebar-list-item">
                      <a href="/loyality" target="_self">
                          <span class="material-icons-outlined">
                              card_membership</span> <%= __("sideLoyality")%>
                      </a>
                  </li>
      
                  <li class="sidebar-list-item">
                      <a href="/campaigns" target="_self">
                          <span class="material-icons-outlined">campaign</span> <%= __("sideCamp")%>
                      </a>
                  </li>
      
                  <li class="sidebar-list-item">
                      <a href="/queseval" target="_self">
                          <span class="material-icons-outlined">contact_support</span> <%= __("sideEval")%>
                      </a>
                  </li>
      
                  <li class="sidebar-list-item">
                      <a href="/storeset" target="_self">
                          <span class="material-icons-outlined">settings</span>  <%= __("sideSet")%>
                      </a>
                  </li>
              </ul>
          </aside>
       

        <!-- Main -->
        <main class="main-container">
          <div class="main-title">
              <p class="font-weight-bold"><%= __("Points")%></p>
            </div>
            <div class="add-btn">
              <button id="btn-add" onclick="show_hide()"><%= __("addPoints")%></button>
            </div>
          

          </div>
          <!-- Form -->
          <div class="container">
            <form class="form-popup" id="table-form" method="post" action="/">
            <label for="phone"><%= __("userphone")%></label><br>
            <input type="text" name="phone" id="phone">
            <label for="points"><%= __("Points")%></label>
            <input type="number" name="points" id="points">
            <label for="status"><%= __("status")%></label><br>
            <select id="status" name="status">
              <option><%= __("activePoint")%></option>
              <option><%= __("inactive")%></option>
            </select><br>
            <label for="date"><%= __("date")%></label>
            <input type="date" name="date" id="date">
            <input type="button" name="button" id="btn" value="Add" onclick="updateUser()">
            </form>
           <div id="result"></div>  
             </div>
        
            <table id="userTable">
              <thead>
                <tr>
                  <th><%= __("userphone")%></th>
                  <th><%= __("Points")%> </th>
                  <th><%= __("status")%></th>
                  <th><%= __("date")%></th>
                </tr>
              </thead>
              <tbody>

              </tbody>
            </table>
          


        <script>
       function show_hide() {
        var x = document.getElementById("table-form");
        if (x.style.display === "none") {
          x.style.display = "block";
        } else {
          x.style.display = "none";
        }
      }

          function updateUser() {

            const phone = document.getElementById('phone').value;
            const status = document.getElementById('status').value;
            const date = document.getElementById('date').value;
            const points = document.getElementById('points').value;
            const data = { phone, status, date, points };
            fetch('http://localhost:8080/users', {
              method: 'PUT',
              headers: {
                'Content-Type': 'application/json',

              },
              body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
              alert("Points added successfully")
              const userTable = document.getElementById('userTable');
              const tbody = userTable.querySelector('tbody');
              const row = tbody.insertRow();
              const phoneCell = row.insertCell();
              const pointsCell = row.insertCell();
              const statusCell = row.insertCell();
              const dateCell = row.insertCell();
              phoneCell.innerHTML = data.phone;
              statusCell.innerHTML = data.status;
              dateCell.innerHTML = data.date;
              pointsCell.innerHTML = data.points;
            })
            .catch(error => {
              const resultDiv = document.getElementById('result');
              resultDiv.innerHTML = `Error: ${error.message}`;
              alert("Error")
            });
          }

         // Retrieve the count from the browser's local storage
        const unreadNotificationsCount = localStorage.getItem('unreadNotificationsCount');
        if (unreadNotificationsCount) {
          const notificationsCount = document.getElementById("noti_number");
          notificationsCount.textContent = unreadNotificationsCount;
          notificationsCount.style.display = unreadNotificationsCount > 0 ? 'block' : 'none';

          // Display the count on the icon in the other page
          const iconNotificationsCount = document.getElementById('icon_noti_number');
          iconNotificationsCount.textContent = unreadNotificationsCount;
          iconNotificationsCount.style.display = unreadNotificationsCount > 0 ? 'block' : 'none';
}
        </script>
      </body>
      </html>